<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0F0F0">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardViewProveedor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="#DDDDDD"
        app:strokeWidth="1dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Código y Nombre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCodigoP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Código: 001"
                    android:textColor="#444444"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/tvNombreP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Distribuidora Medifarma"
                    android:textColor="#222222"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Teléfono y Correo -->
            <TextView
                android:id="@+id/tvTelefonoP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teléfono: (01) 2345678"
                android:textColor="#555555"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvCorreoP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo: ventas@medifarma.pe"
                android:textColor="#555555"
                android:textSize="13sp" />

            <!-- Dirección -->
            <TextView
                android:id="@+id/tvDireccionP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dirección: Av. Arequipa 1234, Lima"
                android:textColor="#555555"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

            <!-- Contacto -->
            <TextView
                android:id="@+id/tvContactoP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contacto: Sr. Luis Gómez"
                android:textColor="#555555"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />

            <!-- Estado -->
            <TextView
                android:id="@+id/tvEstadoP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado: Activo"
                android:textColor="#007E33"
                android:textSize="13sp"
                android:textStyle="italic"
                android:layout_marginTop="6dp" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
